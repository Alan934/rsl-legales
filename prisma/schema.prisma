generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

enum Role {
  USUARIO
  ADMIN
}

enum ServicioRequerido {
  CERTIFICACIONES
  OP_INMOBILIARIAS
  CONTRATOS_PRIVADOS
}

model Usuario {
  id        Int    @id @default(autoincrement())
  nombre    String
  apellido  String
  edad      Int
  email     String @unique
  password  String
  role      Role   @default(USUARIO)  // Enum para el rol
  deleted         Boolean     @default(false)
  @@map("usuarios")
}

model Formulario {
  id            Int    @id @default(autoincrement())
  nombreCompleto       String
  email                String
  telefono             String
  servicioRequerido    ServicioRequerido //Enum??
  mensaje              String
  available            Boolean  @default(true)
}